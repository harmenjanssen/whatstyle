---
import { getCollection } from "astro:content";

import MainLayout from "../layouts/MainLayout.astro";
import ArticlePreview from "../components/ArticlePreview.astro";

const pageTitle = "Web development blog by Harmen Janssen";
const articles = await getCollection("posts");
const sortedArticles = articles.sort(
  (a, b) => Number(new Date(b.data.date)) - Number(new Date(a.data.date)),
);
---

<MainLayout pageTitle={pageTitle}>
  <article>
    <header>
      <h1>Articles</h1>
    </header>

    <p>
      From 2006 to 2009 I ran this old blog.
      <br />I hate broken links, thatâ€™s why itâ€™s still here.
    </p>

    <p class="attention">
      ðŸ‘‰ For more modern web development articles, take a look at the{" "}
      <a href="https://grrr.tech">GRRR Tech Blog</a>, where Iâ€™m currently doing
      most of my writing.
    </p>
  </article>
  <ol class="articles">
    {
      sortedArticles.map((article) => (
        <li>
          <ArticlePreview
            title={article.data.title}
            url={article.data.url}
            date={article.data.date}
          />
        </li>
      ))
    }
  </ol>
</MainLayout>
